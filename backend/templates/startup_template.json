{
  "template_name": "Startup Pitch",
  "template_id": "startup",
  "description": "创业路演风格，适合融资演示、产品发布、创新项目",
  
  "colors": {
    "primary": [106, 27, 154],
    "secondary": [255, 152, 0],
    "accent": [0, 200, 83],
    "background": [255, 255, 255],
    "dark_bg": [33, 33, 33],
    "text_main": [0, 0, 0],
    "text_light": [117, 117, 117],
    "text_on_dark": [255, 255, 255]
  },
  
  "fonts": {
    "heading": "Montserrat",
    "body": "Open Sans",
    "title_size": 44,
    "heading_size": 32,
    "body_size": 18,
    "caption_size": 14
  },
  
  "slide_layouts": [
    {
      "layout_id": "pitch_title",
      "name": "路演标题页",
      "description": "引人注目的标题页，强调品牌和愿景",
      "elements": [
        {
          "type": "logo",
          "position": {"left": 0.5, "top": 0.5, "width": 1.5, "height": 1.5},
          "style": {"align": "left"}
        },
        {
          "type": "title",
          "position": {"left": 1.5, "top": 2.0, "width": 7.0, "height": 1.2},
          "style": {"font_size": 44, "bold": true, "color": "primary", "align": "left"}
        },
        {
          "type": "tagline",
          "position": {"left": 1.5, "top": 3.5, "width": 7.0, "height": 0.6},
          "style": {"font_size": 22, "color": "secondary", "align": "left"}
        },
        {
          "type": "presenter_info",
          "position": {"left": 1.5, "top": 4.5, "width": 5.0, "height": 0.8},
          "style": {"font_size": 16, "color": "text_light"}
        }
      ]
    },
    {
      "layout_id": "problem",
      "name": "问题陈述页",
      "description": "阐述市场痛点",
      "elements": [
        {
          "type": "section_tag",
          "position": {"left": 0.5, "top": 0.4, "width": 1.5, "height": 0.4},
          "style": {"font_size": 14, "bold": true, "color": "secondary", "background": "accent", "text_color": "text_on_dark"}
        },
        {
          "type": "title",
          "position": {"left": 0.5, "top": 1.0, "width": 9.0, "height": 0.8},
          "style": {"font_size": 36, "bold": true, "color": "primary"}
        },
        {
          "type": "pain_points",
          "position": {"left": 1.0, "top": 2.0, "width": 8.0, "height": 3.2},
          "style": {"font_size": 18, "color": "text_main", "bullet_style": "emoji"}
        }
      ]
    },
    {
      "layout_id": "solution",
      "name": "解决方案页",
      "description": "展示产品如何解决问题",
      "elements": [
        {
          "type": "section_tag",
          "position": {"left": 0.5, "top": 0.4, "width": 1.5, "height": 0.4},
          "style": {"font_size": 14, "bold": true, "color": "secondary", "background": "primary", "text_color": "text_on_dark"}
        },
        {
          "type": "title",
          "position": {"left": 0.5, "top": 1.0, "width": 9.0, "height": 0.8},
          "style": {"font_size": 36, "bold": true, "color": "primary"}
        },
        {
          "type": "product_image",
          "position": {"left": 5.5, "top": 2.0, "width": 4.0, "height": 3.2},
          "style": {"shadow": true, "rounded_corners": 10}
        },
        {
          "type": "solution_text",
          "position": {"left": 0.8, "top": 2.0, "width": 4.3, "height": 3.2},
          "style": {"font_size": 16, "color": "text_main", "line_spacing": 1.6}
        }
      ]
    },
    {
      "layout_id": "market_size",
      "name": "市场规模页",
      "description": "展示市场机会",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.5, "width": 9.0, "height": 0.8},
          "style": {"font_size": 32, "bold": true, "color": "primary"}
        },
        {
          "type": "market_chart",
          "position": {"left": 0.8, "top": 1.5, "width": 5.0, "height": 3.8},
          "style": {"chart_type": "donut", "color_scheme": ["primary", "secondary", "accent"]}
        },
        {
          "type": "market_metrics",
          "position": {"left": 6.2, "top": 1.5, "width": 3.3, "height": 3.8},
          "style": {
            "metric_style": "big_number",
            "font_size": 28,
            "label_size": 14,
            "color": "accent"
          }
        }
      ]
    },
    {
      "layout_id": "traction",
      "name": "业务进展页",
      "description": "展示增长数据和里程碑",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.5, "width": 9.0, "height": 0.8},
          "style": {"font_size": 32, "bold": true, "color": "primary"}
        },
        {
          "type": "growth_chart",
          "position": {"left": 0.8, "top": 1.5, "width": 8.4, "height": 2.5},
          "style": {"chart_type": "line", "trend_line": true, "color": "accent"}
        },
        {
          "type": "key_metrics",
          "position": {"left": 0.8, "top": 4.2, "width": 8.4, "height": 1.0},
          "style": {"layout": "horizontal", "font_size": 20, "bold": true}
        }
      ]
    },
    {
      "layout_id": "business_model",
      "name": "商业模式页",
      "description": "阐述盈利模式",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.5, "width": 9.0, "height": 0.8},
          "style": {"font_size": 32, "bold": true, "color": "primary"}
        },
        {
          "type": "revenue_streams",
          "position": {"left": 0.8, "top": 1.5, "width": 4.0, "height": 3.8},
          "style": {"icon_bullets": true, "font_size": 16}
        },
        {
          "type": "pricing_table",
          "position": {"left": 5.2, "top": 1.5, "width": 4.3, "height": 3.8},
          "style": {"header_color": "primary", "highlight_column": 2}
        }
      ]
    },
    {
      "layout_id": "team",
      "name": "团队介绍页",
      "description": "核心团队成员",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.5, "width": 9.0, "height": 0.6},
          "style": {"font_size": 32, "bold": true, "color": "primary"}
        },
        {
          "type": "team_grid",
          "position": {"left": 0.8, "top": 1.3, "width": 8.4, "height": 4.0},
          "style": {
            "layout": "grid",
            "columns": 3,
            "photo_size": "circle",
            "photo_diameter": 1.2,
            "name_size": 16,
            "title_size": 12,
            "background": [250, 250, 250]
          }
        }
      ]
    },
    {
      "layout_id": "competitive_advantage",
      "name": "竞争优势页",
      "description": "对比竞品展示优势",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.5, "width": 9.0, "height": 0.6},
          "style": {"font_size": 32, "bold": true, "color": "primary"}
        },
        {
          "type": "comparison_matrix",
          "position": {"left": 0.8, "top": 1.3, "width": 8.4, "height": 4.0},
          "style": {
            "our_column_color": "accent",
            "competitor_color": [200, 200, 200],
            "checkmark_style": "bold"
          }
        }
      ]
    },
    {
      "layout_id": "roadmap",
      "name": "发展路线图",
      "description": "未来计划和里程碑",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.5, "width": 9.0, "height": 0.6},
          "style": {"font_size": 32, "bold": true, "color": "primary"}
        },
        {
          "type": "timeline",
          "position": {"left": 0.8, "top": 1.5, "width": 8.4, "height": 3.8},
          "style": {
            "orientation": "horizontal",
            "milestone_color": "secondary",
            "line_color": "accent",
            "font_size": 14
          }
        }
      ]
    },
    {
      "layout_id": "funding_ask",
      "name": "融资需求页",
      "description": "资金需求和用途",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.5, "width": 9.0, "height": 0.8},
          "style": {"font_size": 36, "bold": true, "color": "primary"}
        },
        {
          "type": "funding_amount",
          "position": {"left": 1.5, "top": 1.8, "width": 7.0, "height": 1.2},
          "style": {"font_size": 48, "bold": true, "color": "accent", "align": "center"}
        },
        {
          "type": "use_of_funds",
          "position": {"left": 1.0, "top": 3.3, "width": 8.0, "height": 2.0},
          "style": {"chart_type": "horizontal_bar", "color_scheme": ["primary", "secondary", "accent"]}
        }
      ]
    },
    {
      "layout_id": "thank_you",
      "name": "感谢页",
      "description": "结束页带联系方式",
      "elements": [
        {
          "type": "thank_you_message",
          "position": {"left": 2.0, "top": 1.5, "width": 6.0, "height": 1.2},
          "style": {"font_size": 44, "bold": true, "color": "primary", "align": "center"}
        },
        {
          "type": "contact_info",
          "position": {"left": 2.5, "top": 3.0, "width": 5.0, "height": 1.5},
          "style": {"font_size": 18, "color": "text_main", "align": "center", "include_qr": true}
        }
      ]
    }
  ],
  
  "content_guidelines": {
    "max_words_per_bullet": 12,
    "max_bullets_per_slide": 5,
    "paragraph_word_count": [100, 200],
    "emphasize_numbers": true,
    "use_icons": true,
    "visual_hierarchy": "strong",
    "storytelling_style": "emotional"
  }
}
