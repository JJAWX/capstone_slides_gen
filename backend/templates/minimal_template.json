{
  "template_name": "Minimal Design",
  "template_id": "minimal",
  "description": "极简主义风格，适合产品设计、艺术展示、哲学思考",
  
  "colors": {
    "primary": [0, 0, 0],
    "secondary": [100, 100, 100],
    "accent": [255, 0, 80],
    "background": [255, 255, 255],
    "text_main": [0, 0, 0],
    "text_light": [150, 150, 150]
  },
  
  "fonts": {
    "heading": "Helvetica Neue",
    "body": "Helvetica",
    "title_size": 56,
    "heading_size": 36,
    "body_size": 20,
    "caption_size": 14
  },
  
  "slide_layouts": [
    {
      "layout_id": "zen_title",
      "name": "禅意标题页",
      "description": "大量留白的标题页",
      "elements": [
        {
          "type": "title",
          "position": {"left": 1.5, "top": 2.0, "width": 7.0, "height": 1.5},
          "style": {"font_size": 56, "bold": true, "color": "primary", "align": "center", "letter_spacing": 2}
        },
        {
          "type": "thin_line",
          "position": {"left": 3.5, "top": 3.8, "width": 3.0, "height": 0.02},
          "style": {"color": "accent"}
        }
      ]
    },
    {
      "layout_id": "statement",
      "name": "单一陈述页",
      "description": "一句话占满整页",
      "elements": [
        {
          "type": "statement_text",
          "position": {"left": 1.0, "top": 2.0, "width": 8.0, "height": 2.0},
          "style": {
            "font_size": 44,
            "color": "primary",
            "align": "center",
            "line_height": 1.8,
            "weight": "light"
          }
        }
      ]
    },
    {
      "layout_id": "text_minimal",
      "name": "极简文字页",
      "description": "简洁的要点列表",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.8, "top": 0.8, "width": 8.4, "height": 0.7},
          "style": {"font_size": 36, "bold": false, "color": "primary", "weight": "light"}
        },
        {
          "type": "content_list",
          "position": {"left": 1.2, "top": 2.0, "width": 7.6, "height": 3.0},
          "style": {
            "font_size": 20,
            "color": "text_main",
            "line_spacing": 2.2,
            "bullet_style": "none",
            "indent": 0
          }
        }
      ]
    },
    {
      "layout_id": "image_focus",
      "name": "图片焦点页",
      "description": "大图配少量文字",
      "elements": [
        {
          "type": "hero_image",
          "position": {"left": 0.0, "top": 0.5, "width": 10.0, "height": 4.0},
          "style": {"fit": "cover", "filter": "none"}
        },
        {
          "type": "caption",
          "position": {"left": 1.0, "top": 4.8, "width": 8.0, "height": 0.5},
          "style": {"font_size": 16, "color": "text_light", "align": "left", "weight": "light"}
        }
      ]
    },
    {
      "layout_id": "split_image_text",
      "name": "图文分割页",
      "description": "50/50图文分割",
      "elements": [
        {
          "type": "split_image",
          "position": {"left": 0.0, "top": 0.0, "width": 5.0, "height": 5.625},
          "style": {"fit": "cover"}
        },
        {
          "type": "split_text",
          "position": {"left": 5.5, "top": 1.5, "width": 4.0, "height": 2.5},
          "style": {
            "font_size": 18,
            "color": "text_main",
            "line_spacing": 1.8,
            "align": "left"
          }
        }
      ]
    },
    {
      "layout_id": "number_focus",
      "name": "数字焦点页",
      "description": "突出显示一个关键数字",
      "elements": [
        {
          "type": "big_number",
          "position": {"left": 2.0, "top": 1.2, "width": 6.0, "height": 1.5},
          "style": {
            "font_size": 120,
            "bold": true,
            "color": "accent",
            "align": "center"
          }
        },
        {
          "type": "number_context",
          "position": {"left": 2.0, "top": 3.0, "width": 6.0, "height": 0.8},
          "style": {
            "font_size": 24,
            "color": "text_main",
            "align": "center",
            "weight": "light"
          }
        }
      ]
    },
    {
      "layout_id": "quote_minimal",
      "name": "引用页",
      "description": "引言展示",
      "elements": [
        {
          "type": "quote_mark",
          "position": {"left": 1.5, "top": 1.0, "width": 0.8, "height": 0.8},
          "style": {"font_size": 120, "color": "accent", "opacity": 0.3}
        },
        {
          "type": "quote_text",
          "position": {"left": 1.5, "top": 1.8, "width": 7.0, "height": 2.0},
          "style": {
            "font_size": 28,
            "color": "primary",
            "italic": true,
            "line_spacing": 1.6,
            "align": "left"
          }
        },
        {
          "type": "quote_author",
          "position": {"left": 1.5, "top": 4.0, "width": 7.0, "height": 0.5},
          "style": {
            "font_size": 18,
            "color": "text_light",
            "align": "left"
          }
        }
      ]
    },
    {
      "layout_id": "grid_layout",
      "name": "网格布局页",
      "description": "2x2或3x3网格展示",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.8, "top": 0.5, "width": 8.4, "height": 0.6},
          "style": {"font_size": 32, "color": "primary", "weight": "light"}
        },
        {
          "type": "grid_container",
          "position": {"left": 0.8, "top": 1.3, "width": 8.4, "height": 4.0},
          "style": {
            "grid_columns": 2,
            "grid_rows": 2,
            "gap": 0.3,
            "cell_padding": 0.2,
            "border": false
          }
        }
      ]
    },
    {
      "layout_id": "timeline_minimal",
      "name": "极简时间线",
      "description": "垂直时间线",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.8, "top": 0.5, "width": 8.4, "height": 0.6},
          "style": {"font_size": 32, "color": "primary", "weight": "light"}
        },
        {
          "type": "vertical_timeline",
          "position": {"left": 2.0, "top": 1.5, "width": 6.0, "height": 3.8},
          "style": {
            "line_width": 2,
            "line_color": "secondary",
            "dot_size": 12,
            "dot_color": "accent",
            "font_size": 16,
            "spacing": 0.9
          }
        }
      ]
    },
    {
      "layout_id": "contrast",
      "name": "对比页",
      "description": "黑白对比设计",
      "elements": [
        {
          "type": "left_panel",
          "position": {"left": 0.0, "top": 0.0, "width": 5.0, "height": 5.625},
          "style": {"background": "primary", "text_color": "background"}
        },
        {
          "type": "right_panel",
          "position": {"left": 5.0, "top": 0.0, "width": 5.0, "height": 5.625},
          "style": {"background": "background", "text_color": "primary"}
        },
        {
          "type": "vs_divider",
          "position": {"left": 4.8, "top": 2.5, "width": 0.4, "height": 0.6},
          "style": {"text": "VS", "font_size": 24, "color": "accent"}
        }
      ]
    },
    {
      "layout_id": "end_minimal",
      "name": "极简结束页",
      "description": "简洁的结束语",
      "elements": [
        {
          "type": "end_message",
          "position": {"left": 2.0, "top": 2.3, "width": 6.0, "height": 0.8},
          "style": {
            "font_size": 40,
            "color": "primary",
            "align": "center",
            "weight": "light"
          }
        },
        {
          "type": "accent_dot",
          "position": {"left": 4.85, "top": 3.3, "width": 0.3, "height": 0.3},
          "style": {"shape": "circle", "color": "accent"}
        }
      ]
    }
  ],
  
  "content_guidelines": {
    "max_words_per_bullet": 8,
    "max_bullets_per_slide": 4,
    "paragraph_word_count": [50, 150],
    "whitespace_ratio": 0.6,
    "emphasis_style": "size_contrast",
    "imagery": "high_quality_required",
    "philosophy": "less_is_more"
  }
}
