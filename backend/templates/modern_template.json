          "position": {"left": 0.8, "top": 1.4, "width": 4.0, "height": 1.5},
          "style": {"font_size": 16, "color": "text_secondary", "line_spacing": 1.6}
        },
        {
          "type": "device_mockup",
          "position": {"left": 5.5, "top": 0.8, "width": 3.5, "height": 4.0},
          "style": {
            "device_type": "phone",
            "device_color": "black",
            "screen_radius": 20,
            "shadow": "large"
          }
        }
      ]
    },
    {
      "layout_id": "icon_features",
      "name": "图标功能页",
      "description": "带图标的功能列表",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.8, "top": 0.5, "width": 8.4, "height": 0.6},
          "style": {"font_size": 32, "bold": true, "color": "text_main"}
        },
        {
          "type": "icon_grid",
          "position": {"left": 0.8, "top": 1.3, "width": 8.4, "height": 4.0},
          "style": {
            "columns": 2,
            "icon_size": 60,
            "icon_background": "surface",
            "icon_radius": 12,
            "text_size": 16,
            "spacing": 0.3
          }
        }
      ]
    },
    {
      "layout_id": "pricing_modern",
      "name": "定价方案页",
      "description": "现代定价表",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.8, "top": 0.4, "width": 8.4, "height": 0.6},
          "style": {"font_size": 32, "bold": true, "color": "text_main", "align": "center"}
        },
        {
          "type": "pricing_cards",
          "position": {"left": 0.8, "top": 1.2, "width": 8.4, "height": 4.0},
          "style": {
            "card_count": 3,
            "highlight_middle": true,
            "highlight_color": "primary",
            "radius": 16,
            "shadow": "medium",
            "button_style": "rounded"
          }
        }
      ]
    }
  ],
  
  "content_guidelines": {
    "max_words_per_bullet": 12,
    "max_bullets_per_slide": 6,
    "paragraph_word_count": [120, 250],
    "use_icons": true,
    "icon_style": "outline",
    "spacing": "generous",
    "border_radius": 12,
    "shadow_depth": "subtle",
    "animation_ready": true
  }
}
