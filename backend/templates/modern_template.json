      "elements": [
        {
          "type": "title",
          "position": {"left": 0.8, "top": 0.5, "width": 8.4, "height": 0.6},
          "style": {"font_size": 32, "bold": true, "color": "text_main"}
        },
        {
          "type": "flow_diagram",
          "position": {"left": 0.8, "top": 1.3, "width": 8.4, "height": 4.0},
          "style": {
            "node_shape": "rounded_rectangle",
            "node_background": "surface",
            "node_border": "primary",
            "arrow_style": "modern",
            "arrow_color": "text_secondary",
            "layout": "horizontal"
          }
        }
      ]
    },
    {
      "layout_id": "testimonial",
      "name": "客户评价页",
      "description": "用户反馈展示",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.8, "top": 0.5, "width": 8.4, "height": 0.6},
          "style": {"font_size": 32, "bold": true, "color": "text_main"}
        },
        {
          "type": "quote_card",
          "position": {"left": 1.5, "top": 1.5, "width": 7.0, "height": 2.5},
          "style": {
            "background": "surface",
            "border_radius": 16,
            "padding": 0.4,
            "quote_size": 18,
            "quote_color": "text_main"
          }
        },
        {
          "type": "author_info",
          "position": {"left": 1.5, "top": 4.2, "width": 7.0, "height": 0.8},
          "style": {
            "avatar_size": 50,
            "avatar_border": "primary",
            "name_size": 16,
            "title_size": 14,
            "layout": "horizontal"
          }
        }
      ]
    },
    {
      "layout_id": "app_showcase",
      "name": "应用展示页",
