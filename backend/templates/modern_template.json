      "elements": [
        {
          "type": "title",
          "position": {"left": 0.8, "top": 0.5, "width": 8.4, "height": 0.6},
          "style": {"font_size": 32, "bold": true, "color": "text_main"}
        },
        {
          "type": "comparison_table",
          "position": {"left": 0.8, "top": 1.3, "width": 8.4, "height": 4.0},
          "style": {
            "header_background": "primary",
            "header_text_color": [255, 255, 255],
            "row_hover": true,
            "checkmark_color": "secondary",
            "cross_color": [255, 59, 48],
            "border_style": "modern"
          }
        }
      ]
    },
    {
      "layout_id": "process_flow",
      "name": "流程图页",
