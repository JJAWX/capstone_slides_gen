{
  "template_name": "Corporate Professional",
  "template_id": "corporate",
  "description": "专业商务风格，适合企业演示、商业计划、季度汇报",
  
  "colors": {
    "primary": [0, 51, 102],
    "secondary": [0, 102, 204],
    "accent": [255, 153, 0],
    "background": [255, 255, 255],
    "text_main": [51, 51, 51],
    "text_light": [128, 128, 128]
  },
  
  "fonts": {
    "heading": "Arial",
    "body": "Arial",
    "title_size": 44,
    "heading_size": 32,
    "body_size": 18,
    "caption_size": 14
  },
  
  "slide_layouts": [
    {
      "layout_id": "title_slide",
      "name": "标题页",
      "description": "演示文稿开场页",
      "elements": [
        {
          "type": "title",
          "position": {"left": 1.0, "top": 2.0, "width": 8.0, "height": 1.0},
          "style": {"font_size": 44, "bold": true, "color": "primary", "align": "center"}
        },
        {
          "type": "subtitle",
          "position": {"left": 1.0, "top": 3.2, "width": 8.0, "height": 0.8},
          "style": {"font_size": 20, "color": "text_main", "align": "center"}
        },
        {
          "type": "background_image",
          "position": {"left": 0, "top": 0, "width": 10, "height": 5.625},
          "style": {"opacity": 0.15}
        }
      ]
    },
    {
      "layout_id": "section_divider",
      "name": "小节分隔页",
      "description": "章节过渡页面，带大标题和背景图",
      "elements": [
        {
          "type": "section_title",
          "position": {"left": 1.0, "top": 2.0, "width": 8.0, "height": 1.5},
          "style": {"font_size": 40, "bold": true, "color": "primary", "align": "left"}
        },
        {
          "type": "section_number",
          "position": {"left": 0.5, "top": 0.5, "width": 1.0, "height": 1.0},
          "style": {"font_size": 80, "bold": true, "color": "accent", "opacity": 0.3}
        },
        {
          "type": "background_image",
          "position": {"left": 0, "top": 0, "width": 10, "height": 5.625},
          "style": {"opacity": 0.2}
        }
      ]
    },
    {
      "layout_id": "bullet_points",
      "name": "项目符号页",
      "description": "标准内容页，4-6个bullet points",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.3, "width": 9.0, "height": 0.8},
          "style": {"font_size": 32, "bold": true, "color": "primary"}
        },
        {
          "type": "bullet_list",
          "position": {"left": 0.8, "top": 1.3, "width": 8.4, "height": 3.8},
          "style": {"font_size": 18, "color": "text_main", "line_spacing": 1.5, "bullet_style": "•"}
        }
      ]
    },
    {
      "layout_id": "two_column",
      "name": "双栏对比页",
      "description": "左右对比内容，适合比较场景",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.3, "width": 9.0, "height": 0.8},
          "style": {"font_size": 32, "bold": true, "color": "primary"}
        },
        {
          "type": "column_left",
          "position": {"left": 0.5, "top": 1.3, "width": 4.25, "height": 3.8},
          "style": {"font_size": 16, "color": "text_main"}
        },
        {
          "type": "column_right",
          "position": {"left": 5.25, "top": 1.3, "width": 4.25, "height": 3.8},
          "style": {"font_size": 16, "color": "text_main"}
        }
      ]
    },
    {
      "layout_id": "image_content",
      "name": "图文混排页",
      "description": "左侧图片，右侧文字",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.3, "width": 9.0, "height": 0.6},
          "style": {"font_size": 28, "bold": true, "color": "primary"}
        },
        {
          "type": "image",
          "position": {"left": 0.5, "top": 1.2, "width": 4.5, "height": 3.8},
          "style": {"border": true, "shadow": true}
        },
        {
          "type": "content",
          "position": {"left": 5.2, "top": 1.2, "width": 4.3, "height": 3.8},
          "style": {"font_size": 16, "color": "text_main", "line_spacing": 1.4}
        }
      ]
    },
    {
      "layout_id": "chart_data",
      "name": "图表展示页",
      "description": "大图表配简短说明",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.3, "width": 9.0, "height": 0.6},
          "style": {"font_size": 28, "bold": true, "color": "primary"}
        },
        {
          "type": "chart",
          "position": {"left": 1.5, "top": 1.2, "width": 7.0, "height": 3.3},
          "style": {}
        },
        {
          "type": "caption",
          "position": {"left": 0.5, "top": 4.8, "width": 9.0, "height": 0.6},
          "style": {"font_size": 14, "color": "text_light", "align": "center"}
        }
      ]
    },
    {
      "layout_id": "table_data",
      "name": "数据表格页",
      "description": "结构化数据展示",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.3, "width": 9.0, "height": 0.6},
          "style": {"font_size": 28, "bold": true, "color": "primary"}
        },
        {
          "type": "table",
          "position": {"left": 0.5, "top": 1.2, "width": 9.0, "height": 3.8},
          "style": {
            "header_color": "primary",
            "header_text_color": [255, 255, 255],
            "row_height": 0.5,
            "border_color": [200, 200, 200]
          }
        }
      ]
    },
    {
      "layout_id": "narrative",
      "name": "段落叙事页",
      "description": "长文本内容，适合故事讲述",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.3, "width": 9.0, "height": 0.6},
          "style": {"font_size": 28, "bold": true, "color": "primary"}
        },
        {
          "type": "paragraph",
          "position": {"left": 1.0, "top": 1.2, "width": 8.0, "height": 3.8},
          "style": {"font_size": 16, "color": "text_main", "line_spacing": 1.6, "align": "justify"}
        }
      ]
    },
    {
      "layout_id": "quote",
      "name": "引言页",
      "description": "突出显示重要引述",
      "elements": [
        {
          "type": "quote_text",
          "position": {"left": 1.5, "top": 1.8, "width": 7.0, "height": 2.0},
          "style": {"font_size": 28, "color": "primary", "italic": true, "align": "center"}
        },
        {
          "type": "quote_author",
          "position": {"left": 1.5, "top": 4.0, "width": 7.0, "height": 0.5},
          "style": {"font_size": 18, "color": "text_light", "align": "right"}
        },
        {
          "type": "decoration",
          "shape": "quote_marks",
          "position": {"left": 0.8, "top": 1.5, "width": 0.5, "height": 0.5},
          "style": {"color": "accent", "opacity": 0.3}
        }
      ]
    },
    {
      "layout_id": "timeline",
      "name": "时间轴页",
      "description": "展示事件发展顺序",
      "elements": [
        {
          "type": "title",
          "position": {"left": 0.5, "top": 0.3, "width": 9.0, "height": 0.6},
          "style": {"font_size": 28, "bold": true, "color": "primary"}
        },
        {
          "type": "timeline",
          "position": {"left": 1.0, "top": 1.5, "width": 8.0, "height": 3.5},
          "style": {
            "line_color": "accent",
            "node_color": "primary",
            "text_color": "text_main",
            "orientation": "horizontal"
          }
        }
      ]
    }
  ],
  
  "content_guidelines": {
    "max_words_per_bullet": 12,
    "max_bullets_per_slide": 6,
    "paragraph_word_count": [200, 400],
    "table_max_rows": 6,
    "title_max_length": 60
  }
}
